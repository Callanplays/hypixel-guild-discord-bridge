{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["node_modules", "build", "config"]
}
